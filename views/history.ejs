    <script>
        function changeDate(date) {
            var strMonth = date.substr(4, 3);
            var day = date.substr(8, 2);
            var year = date.substr(11, 4);
            var time = date.substr(16, 8);
            if (strMonth == "Jan") {
                var month = 1;
            }
            if (strMonth == "Feb") {
                var month = 2;
            }
            if (strMonth == "Mar") {
                var month = 3;
            }
            if (strMonth == "Apr") {
                var month = 4;
            }
            if (strMonth == "May") {
                var month = 5;
            }
            if (strMonth == "Jun") {
                var month = 6;
            }
            if (strMonth == "Jul") {
                var month = 7;
            }
            if (strMonth == "Aug") {
                var month = 8;
            }
            if (strMonth == "Sep") {
                var month = 9;
            }
            if (strMonth == "Oct") {
                var month = 10;
            }
            if (strMonth == "Nov") {
                var month = 11;
            }
            if (strMonth == "Dec") {
                var month = 12;
            }
            var dateTime = year + "年" + month + "月" + day + "日" + time;
            return dateTime;

        }
    </script>
    <div class="container" style="margin-top: 30px;">

        <table class="table table-bordered table-hover text-center">
            <thead class="">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">ID</th>
                    <th scope="col">出品番号</th>
                    <th scope="col">入札開始時間</th>
                    <th scope="col">金額</th>
                </tr>
            </thead>
            <tbody>

                <% for (var i = 0; i < values.length; i++ ) { %>

                    <tr>
                        <th scope="row">
                            <%= i+1 %>
                        </th>
                        <td>
                            <%= values[i].id %>
                        </td>
                        <td>
                            <%= values[i].product_num %>
                        </td>
                        <td id="text<%= i %>">
                            <%= values[i].start_bid_day %>
                        </td>
                        <td>
                            <%= values[i].bid_amount %>
                        </td>
                    </tr>
                    <script>
                        var startdate = changeDate("<%= values[i].start_bid_day %>");
                        document.getElementById("text<%= i %>").innerHTML = startdate;
                        console.log(startdate);
                    </script>

                    <% } %>
            </tbody>
        </table>
    </div>