<%- include('partials/traderHeader.ejs'); %>

    <!--ユーザリスト-->
    <nav class="navbar navbar-expand-lg navbar-light border-primary border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand text-primary" href="#"><b>ユーザー一覧</b></a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="/master"><b>Home</b></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top: 30px;">

        <table class="table table-bordered table-hover text-center">
            <thead class="">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">ID</th>
                    <th scope="col">名前</th>
                    <th scope="col">電話番号</th>
                    <th scope="col">メールアドレス</th>
                    <th scope="col">住所</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < values.length; i++ ) { %>

                    <tr>
                        <th scope="row">
                            <%= i+1 %>
                        </th>
                        <td>
                            <%= values[i].id %>
                        </td>
                        <td>
                            <%= values[i].last_name %>
                                <%= values[i].first_name %>
                        </td>
                        <td>
                            <%= values[i].call_number %>
                        </td>
                        <td>
                            <%= values[i].mail %>
                        </td>
                        <td>
                            〒
                            <%= values[i].post_code %>
                                <%= values[i].address %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>